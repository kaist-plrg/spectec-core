  -- if exprIL_l' = $reduce_senum_unary(exprIL_l, def $compatible_bitstringindex)
  ----
  -- Eval_static: p C |- exprIL_l' ~> val_l
  -- if n_l = $get_num(val_l)
  -- if exprIL_l'' = ValueE val_l `(typ_l; LCTK)
