  -- if n_h = $get_num(val_h)
  -- if exprIL_h'' = ValueE val_h `(typ_h; LCTK)
  ----
  -- if $is_valid_bitstring_slice(typ_b', n_l, n_h)
  ----
  -- if typ = FBitT $(n_h - n_l + 1)

