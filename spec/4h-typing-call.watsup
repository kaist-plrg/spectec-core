  -- if cstr' = $update_map<tid, typcstr>(cstr, tid_h, UNKNOWN)

def $merge_cstr'(cstr_o, cstr_n, tid_h :: tid_t*, cstr) = $merge_cstr'(cstr_o, cstr_n, tid_t*, cstr')
  -- if $find_map<tid, typcstr>(cstr_o, tid_h) = UNKNOWN
