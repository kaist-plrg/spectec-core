  -- if $find_map<tid, typcstr>(cstr_n, tid_h) = UNKNOWN
  -- if cstr' = $update_map<tid, typcstr>(cstr, tid_h, KNOWN typ_o)

def $merge_cstr'(cstr_o, cstr_n, tid_h :: tid_t*, cstr) = $merge_cstr'(cstr_o, cstr_n, tid_t*, cstr')
